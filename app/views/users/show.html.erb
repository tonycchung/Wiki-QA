<p id="notice"><%= notice %></p>

<h2>Contributions by <%= @user.email %> </h2>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
    </tr>
  </thead>

  <tbody>
    <% @user.questions.each do |question| %>
      <tr>
        <td><%= question.body %></td>
        <td><%= question.answer %></td>
      </tr>
    <% end %>
  </tbody>
</table>  

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
